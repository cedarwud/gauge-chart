// vercel.json
{
    "version": 2,
    "builds": [
        { "src": "server.ts", "use": "@vercel/node" },
        { "src": "next.config.js", "use": "@vercel/next" }
    ],
    "routes": [
        { "src": "/socket.io", "dest": "/server.ts" },
        { "src": "/.*", "dest": "/server.ts" }
    ]
}
